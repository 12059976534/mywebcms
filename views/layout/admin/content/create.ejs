<% layout('../index') -%>

<div class="card shadow mb-4 rounded-0">
    <div class="card-body">
        <!-- form -->
        <form action="/contentcreatepost" method="post" enctype="multipart/form-data" >
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Title</label>
                        <input type="text" required name="title" class="form-control rounded-0" id="exampleFormControlInput1" placeholder="ExampleTitle">
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlTextarea1">Deskripsi</label>
                        <textarea name="deskripsi" id="editor" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        <!-- <div id="editor"></div> -->
                      </div>
                </div>
                <div class="col-md-3">
                    <label for="thumbnail">Thumbnail</label>
                    <input type="file" required name="thumbnail" id="thumbnail">
                    <label for="kategori" class="mt-3">kategori</label>
                    <select name="kategori" required class="custom-select rounded-0" id="kategori">
                        <option selected>Choose...</option>
                        <%kategori.forEach((i)=>{%>
                        <option value="<%=i.id%>"><%=i.kategoriname%></option>
                        <%})%>
                      </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary rounded-0">Upload artikel</button>
          </form>
        <!-- endform -->
    </div>
</div>
<!-- ckeditor -->
<script src="//cdn.ckeditor.com/4.17.1/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace( 'editor',{
        height: 500,
        // width: 766,
        toolbarCanCollapse: true,
    } );
</script>
